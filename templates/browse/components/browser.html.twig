{# convert bytes in a human readable way #}
{% import "macros/bytes.html.twig" as bytes %}

<form method="post" action="{{ app.request.uri }}">
    <input type="hidden" name="token" value="{{ csrf_token('browse_block-delete') }}" />
    <input type="hidden" name="submit_block-delete" value="true" />
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Size</th>
                <th>Approved</th>
                <th>Delete</th>
                <th>Download</th>
            </tr>
        </thead>
        <tbody>
            {% for item in list %}
                {% set block_disabled = not is_granted('ROLE_ADMIN') ? 'disabled' %}
                <tr>
                    <!-- name -->
                    <td>
                        {% if item.attributes.isDir %}
                            <a style="display:block; width:100%;" 
                                href="{{ app.request.pathinfo ~ '?path=' ~ item.path.getString }}">
                                <span class="glyphicon glyphicon-folder-close"></span> {{ item.path.getBaseName|e }} {# todo #}
                            </a>
                        {% else %}
                            <span class="glyphicon glyphicon-file"></span> {{ item.path.getBaseName|e }} {# todo #}
                        {% endif %}
                    </td>

                    <!-- size -->
                    <td>
                        {{ not item.attributes.isDir ? bytes.humanReadableBytes(item.attributes.fileSize) }}
                    </td>

                    <!-- block -->
                    <td>
                        {% if item.attributes.isFile %}
                            <input type="radio" {{ item.is_blocked ? 'checked' }} {{ block_disabled }} name="block[{{ item.path.getString }}]" value="true">&nbsp;no
                            <input type="radio" {{ item.is_blocked ? 'checked' }} {{ block_disabled }} name="block[{{ item.path.getString }}]" value="false">&nbsp;yes
                        {% endif %}
                    </td>

                    <!-- delete -->
                    <td>
                        {% if item.path.isWritableBy(app.user) %}
                            <input type="checkbox" name="delete[{{ item.path.getString }}]" value="true">
                        {% endif %}
                    </td>

                    <!-- download -->
                    <td>
                        {% if item.attributes.isFile %}
                            {% if item.is_blocked %}
                                <a class="btn btn-xs disabled" role="button" style="pointer-events: auto;"
                                    title="Usually takes <24h" data-toggle="tooltip" data-placement="auto left"
                                    href="{{ item.path.getPublicUrl }}" {# todo fix href #}
                                ><i class="glyphicon glyphicon-time"></i> Awaiting approval</a>
                            {% else %}
                                <a class="btn btn-info btn-xs" role="button" style="width:100%;"
                                    href="{{ item.path.getPublicUrl }}" {# todo fix href #}
                                ><span class="glyphicon glyphicon-link"></span> Link</a>
                            {% endif %}
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <div class="alert alert-info">
                    There is nothing here yet.
                </div>
            {% endfor %}
        </tbody>
    </table>
        
    {% if path.isWritableBy(app.user) %}
        <div class="well well-sm text-right">
            <button type="submit" name="block-delete" class="btn btn-primary">
                {{ is_granted('ROLE_ADMIN') ? '<i class="glyphicon glyphicon-ok"></i> Update approval / delete' : '<span class="glyphicon glyphicon-trash"></span> Delete selected' }}
            </button>
        </div>
    {% endif %}
</form>

{% block javascripts %}
    <!-- enable bootstrap toolstips -->
    <script>
        $(document).ready(function(){
          $('[data-toggle="tooltip"]').tooltip();   
        });
    </script>
{% endblock %}

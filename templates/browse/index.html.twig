{% extends 'base.html.twig' %}

{% block title %}Browse in {{ path.getString }}{% endblock %}

{% block body %}

<!-- banned notification -->
{% if is_granted('ROLE_BANNED') %}
<div class="alert alert-warning">
    <strong>You're banned</strong> from uploading or modifying files on ManiaCDN. If there is any question, please kindly contact info@maniacdn.net. 
</div>
{% endif  %}

<!-- header for the browser (parent folder, own folder, other buttons) -->
{% include 'browse/components/browser_header.html.twig' %}

<!-- uploader -->
{% if path.isWritableBy(app.user) %}
    {% include 'browse/components/upload.html.twig' %}
    <br />
{% endif %}

<!-- create new folder -->
{% if path.isWritableBy(app.user) %}
    {% include 'browse/components/newfolder.html.twig' %}
    <br />
{% endif %}

<!-- filebrowser (table) -->
{% include 'browse/components/browser.html.twig' %}
{% endblock %}
